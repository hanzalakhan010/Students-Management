<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Student List</title>

  <style>
    body {
      font-family: 'Courier New', Courier, monospace;
      background-color: #f9fafb;
    }

    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 20px;
    }

    a.button {
      display: inline-block;
      margin-bottom: 20px;
      padding: 10px 16px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      border-radius: 6px;
      transition: background-color 0.2s ease;
    }

    a.button:hover {
      background-color: #0056b3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      border-radius: 8px;
      overflow: hidden;
    }

    th,
    td {
      padding: 12px 16px;
      border-bottom: 1px solid #e0e0e0;
      text-align: left;
    }

    th {
      background-color: #f4f6f8;
      color: #555;
      font-weight: 600;
    }

    tr:hover {
      background-color: #f1f5f9;
    }

    .no-data {
      text-align: center;
      color: #888;
      margin-top: 40px;
    }
    #searchForm{
      width: 100%;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      margin:10px auto;
      gap:5px
    }
    #searchForm input,#searchForm button{
      font-size: larger;
    }
  </style>
</head>

<body>
  <%- include('partials/nav')%>

    <form id = 'searchForm'>
      <input placeholder="Search" name="search" value="<%=search%>"/>
      <button type="submit">Search</button>
    </form>
    <h1>List of Students</h1>
    <a href="/students/new" class="button">âž• Add New Student</a>
    <% if (students.length) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Enrollment Year</th>
            <th>Major</th>
            <th>Profile</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(function(student) { %>
            <tr>
              <td>
                <%= student.id %>
              </td>
              <td>
                <%= student.name %>
              </td>
              <td>
                <%= student.enrollmentYear %>
              </td>
              <td>
                <%= student.major %>
              </td>
              <td><a href="/student/<%= student.id %>">View</a></td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <% } else { %>
        <p class="no-data">No students found.</p>
        <% } %>

</body>

</html>